{
	"name": "@keeoth/observation-deck",
	"version": "0.0.3",
	"private": false,
	"bin": {
		"observation-deck": "./build/index.js"
	},
	"files": [
		"build"
	],
	"main": "./build/index.js",
	"module": "./build/index.js",
	"type": "module",
	"scripts": {
		"dev": "vite dev",
		"build": "vite build && prepend-shebang",
		"prepend-shebang": "echo '0a\n#!/usr/bin/env node\n.\nw' | ed ./build/index.js",
		"release": "npm run test && npm publish && git push --follow-tags",
		"preview": "vite preview",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"test": "vitest --watch=false",
		"lint": "prettier --check . && eslint .",
		"format": "prettier --write ."
	},
	"devDependencies": {
		"@sveltejs/adapter-auto": "^3.0.0",
		"@sveltejs/adapter-node": "^4.0.1",
		"@sveltejs/kit": "^2.0.0",
		"@sveltejs/vite-plugin-svelte": "^3.0.0",
		"@types/eslint": "8.56.0",
		"@types/node": "^20.11.19",
		"@typescript-eslint/eslint-plugin": "^6.0.0",
		"@typescript-eslint/parser": "^6.0.0",
		"eslint": "^8.56.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-svelte": "^2.36.0-next.4",
		"prettier": "^3.1.1",
		"prettier-plugin-svelte": "^3.1.2",
		"svelte": "^5.0.0-next.1",
		"svelte-check": "^3.6.0",
		"tslib": "^2.4.1",
		"typescript": "^5.0.0",
		"vite": "^5.0.3",
		"vitest": "^1.2.0"
	},
	"dependencies": {
		"@keeoth/observatory": "^0.1.1",
		"tail": "^2.2.6"
	}
}